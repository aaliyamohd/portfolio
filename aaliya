    <script>
        const butterflyColors = [
            { emoji: 'ü¶ã', color: '#89CFF0' },  // Blue
            { emoji: 'ü¶ã', color: '#FFB6C1' },  // Pink
            { emoji: 'ü¶ã', color: '#90EE90' },  // Light green
            { emoji: 'ü¶ã', color: '#DDA0DD' },  // Plum
            { emoji: 'ü¶ã', color: '#FFD700' },  // Gold
            { emoji: 'ü¶ã', color: '#FF69B4' }   // Hot pink
        ];

        function createButterfly() {
            const butterfly = document.createElement('div');
            const butterflyWings = document.createElement('div');
            const randomButterfly = butterflyColors[Math.floor(Math.random() * butterflyColors.length)];
            
            butterflyWings.innerHTML = randomButterfly.emoji;
            butterflyWings.className = 'butterfly-wings';
            butterfly.appendChild(butterflyWings);
            butterfly.className = 'butterfly';
            
            butterfly.style.fontSize = Math.random() * 15 + 15 + 'px';
            butterfly.style.left = Math.random() * window.innerWidth + 'px';
            butterfly.style.top = Math.random() * window.innerHeight + 'px';
            
            const duration = Math.random() * 10 + 15;
            butterfly.style.animationDuration = `${duration}s`;
            butterfly.style.animationDelay = `-${Math.random() * duration}s`;
            
            const randomPath = Math.floor(Math.random() * 4);
            butterfly.style.setProperty('--fly-path', randomPath);
            
            butterfly.style.color = randomButterfly.color;
            butterfly.style.filter = `drop-shadow(0 0 3px ${randomButterfly.color})`;
            
            document.body.appendChild(butterfly);

            setTimeout(() => {
                butterfly.remove();
            }, duration * 1000);
        }

        function createFlower() {
            const flowers = ['üåπ', 'üå∏', 'üåª'];
            const flower = document.createElement('div');
            flower.innerHTML = flowers[Math.floor(Math.random() * flowers.length)];
            flower.className = 'flower';
            flower.style.fontSize = Math.random() * 15 + 15 + 'px';
            flower.style.left = Math.random() * window.innerWidth + 'px';
            flower.style.top = Math.random() * window.innerHeight + 'px';
            document.body.appendChild(flower);
        }

        // Create initial butterflies and flowers
        for (let i = 0; i < 20; i++) {
            createButterfly();
            if (i < 10) createFlower();
        }

        // Add new butterflies periodically
        setInterval(createButterfly, 2000);

        // Add butterflies on page load and refresh
        window.addEventListener('load', () => {
            for (let i = 0; i < 10; i++) {
                setTimeout(createButterfly, i * 300);
            }
        });

        // Handle window resize
        let resizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                document.querySelectorAll('.butterfly').forEach(b => b.remove());
                for (let i = 0; i < 20; i++) {
                    createButterfly();
                }
            }, 250);
        });
    </script>
